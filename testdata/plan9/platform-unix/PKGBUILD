pkgname=platform-unix
pkgdesc="Unix platform implementation"
depends=()
makedepends=(clang ar)
source=(platform_unix.c)

produces() {
    echo "lib/libplatform.a"
}

build() {
    mkdir -p "$FOE_OBJDIR" "$FOE_LIBDIR"
    clang -c "$FOE_SRCDIR/platform_unix.c" -o "$FOE_OBJDIR/platform_unix.o"
    ar rcs "$FOE_LIBDIR/libplatform.a" "$FOE_OBJDIR/platform_unix.o"
}
